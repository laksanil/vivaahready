# Database (MySQL for Hostinger)
DATABASE_URL="mysql://username:password@localhost:3306/vivaahready"
# Keep production DATABASE_URL out of .env.local.
# Local development MUST use a separate non-production database.

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"

# Google OAuth (for Google Sign In)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Resend Email
RESEND_API_KEY="re_your_resend_api_key"
RESEND_DOMAIN_VERIFIED="false"

# AWS (SNS SMS + Topics)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
SNS_SMS_SENDER_ID="VivaahReady"

# Web Push (VAPID keys — generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:support@vivaahready.com"

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# PayPal (optional - for PayPal payments)
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_SANDBOX="true"
PAYPAL_WEBHOOK_ID="your-webhook-id"

# Square (optional - for Square payments)
SQUARE_ENVIRONMENT="sandbox"
SQUARE_SANDBOX_APP_ID="your-sandbox-app-id"
SQUARE_SANDBOX_ACCESS_TOKEN="your-sandbox-token"
SQUARE_PRODUCTION_APP_ID="your-production-app-id"
SQUARE_PRODUCTION_ACCESS_TOKEN="your-production-token"
NEXT_PUBLIC_SQUARE_APP_ID="your-app-id"
NEXT_PUBLIC_SQUARE_ENVIRONMENT="sandbox"

# AI Support Bot (Groq — free tier, get key at console.groq.com)
GROQ_API_KEY="your-groq-api-key"

# Botpress Chatbot (get Client ID from botpress.com Dashboard → Webchat → Advanced Settings)
NEXT_PUBLIC_BOTPRESS_CLIENT_ID="your-botpress-client-id"

# App URL
NEXT_PUBLIC_APP_URL="https://vivaahready.com"

# Meta Pixel (server-side only, no tracking cookies)
META_PIXEL_ID="your-meta-pixel-id"
META_PIXEL_ACCESS_TOKEN="your-meta-access-token"

# Testing (optional)
# NEXT_PUBLIC_E2E_TEST="true"
# PLAYWRIGHT_TEST="true"
# E2E_TEST="true"
# E2E_TEST_PHOTO_URL="https://vivaahready.com/logo-icon.png"
